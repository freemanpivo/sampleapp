<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">

        <layout class="ch.qos.logback.classic.PatternLayout">

            <!--  Se necessÃ¡rio a thread adicionar [%blue(%t)] ao pattern-->
            <Pattern>
                %black(%d{ISO8601})[%cyan(product-service)]%highlight(%-5level)[%magenta(requestId=%X{requestId})]%yellow(%C{0}): %msg%throwable%n
            </Pattern>
        </layout>
    </appender>

    <root level="info">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>